<div class="container">
  <%= render 'shared/flash' %>
  <div class="row">
    <div class="col">
      <h1>All Comments for <strong class="text-danger" ><%= @post.title %></strong></h1>
      <% @comments.each do |comment| %>
        <div class="card">
          <div class="card-body">
            <p class="card-text"><%= comment.content %></p>
          </div>
        </div>
      <% end %>
      <br>
      <%= link_to 'Create Comment', new_comment_path(@post), class: "btn btn-primary" %><br>
      <br>
      <%= link_to 'back', post_path(@post), class: "btn btn-secondary" %>
    </div>
  </div>
</div>