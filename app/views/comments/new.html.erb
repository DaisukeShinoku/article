<div class="container">
  <%= render 'shared/flash' %>
  <div class="row">
    <div class="col">
      <h1>Create Comments for <%= @post.title %></h1>
      <%= form_with model: @comment, local: true do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="form-group">
          <%= f.label :content %><br>
          <%= f.text_area :content, class:"textarea is-medium w-100", rows: "10" %>
        </div>
        <%= f.submit "Comment!!", class: "btn btn-primary" %>
      <% end %>
      <br>
      <%= link_to 'back', comments_path(@post), class: "btn btn-secondary"%>
    </div>
  </div>
</div>